public class Buffer {

    int pos = 0;
    final String EOL = ";";
    
        public static void main(String[] args) throws IOException {
        Lexer lex = new Lexer();
         
         System.out.println(lex.analise("+").nome_token);
    }
       public String Buffer(String codObjt, int pos){

        String arqaux = "";
        char lookAhead  = ' ';
        int aux = 0;
        for(int i = pos;i<codObjt.length() ;i++){

            arqaux += codObjt.charAt(i);
            
            
            if (arqaux.contains(EOL)) {
                
                System.out.println(arqaux);              
                if(i != codObjt.length()-1)
                {
                    this.pos++;
                this.Buffer(codObjt, this.pos);
                
                
                }
                return arqaux ;
            }
            else{
                lookAhead = codObjt.charAt(i+1);
            
            }
             if (lookAhead == ' ')
            {
                this.pos = i + 2;
                
                System.out.println(arqaux + '\n');
                this.Buffer(codObjt, this.pos);
                return arqaux;
                
                              
            }
            else if (lookAhead == ';')
            {
                this.pos = i+1;
                
                System.out.println(arqaux + '\n');
                this.Buffer(codObjt, this.pos);                
                return arqaux ;
                
                              
            }

            
    }
    return "ERROR";
    
    }
    
}
